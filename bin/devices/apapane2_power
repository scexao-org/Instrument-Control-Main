import os
import sys
import time

home = os.getenv('HOME')
sys.path.append(home+'/src/lib/python/')
from nps import NPS

# SPECIFIC PARAMETERS FOR THIS DEVICE

npsname = "apapane2_power"
npsid = 2
portid = 4

description = "power switch for Apapane C-RED 2"

# GENERIC CODE

args = sys.argv[1:]
NPS(npsname, npsid, portid, args=args, description=description)

