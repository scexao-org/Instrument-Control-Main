import os
import sys
import numpy as np
home = os.getenv('HOME')
sys.path.append(home+'/src/lib/python/')
from thorlabswheel import thorlabswheel
import time

# SPECIFIC PARAMETERS FOR THIS DEVICE

devname = "ircam_filter"

whids = ["usb-FTDI_FT232R_USB_UART_A600crjy-if00-port0"]

description = "Filter wheel for Palila and Apapane"

defpos = ["open", "y", "1550nm25nm", "1550nm50nm", "j", "h"]

# GENERIC CODE
args = sys.argv[1:]
thorlabswheel(devname, whids, args=args, defpos=defpos, description=description, color_st=True)
