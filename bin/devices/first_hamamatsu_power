import os
import sys
import time

home = os.getenv('HOME')
sys.path.append(home+'/src/lib/python/')
from nps import NewNPS

# SPECIFIC PARAMETERS FOR THIS DEVICE

npsname = "first_hamamatsu_power"
npsid = 2
portid = 7

description = "power switch for the FIRST Hamamatsu camera (science)"

# GENERIC CODE

args = sys.argv[1:]
NewNPS(npsname, npsid, portid, args=args, description=description)

