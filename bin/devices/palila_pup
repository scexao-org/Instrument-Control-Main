# SPECIFIC PARAMETERS FOR THIS STAGE

stagename = "palila_pup"
flipid = "C"
description = "Pupil lens for Palila"

# GENERIC CODE

args = sys.argv[1:]
flipmount(stagename, flipid, args, description)
