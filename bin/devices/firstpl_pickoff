import os
import sys

home = os.getenv('HOME')
sys.path.append(home+'/src/lib/python/')
from devices import devices

# SPECIFIC PARAMETERS FOR THIS DEVICE

devname = "firstpl_pickoff"

conexids = ["usb-Newport_CONEX-AGP_A6WMSQ3G-if00-port0"]
conexnames = ["theta"]

description = "FIRST pickoff mirror for photometry"

defpos = ["in", "out"]

# GENERIC CODE

args = sys.argv[1:]
devices(devname, conexids, conexnames, args=args, description=description, defpos=defpos, color_st=True)