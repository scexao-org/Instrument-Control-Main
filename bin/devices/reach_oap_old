import os
import sys

home = os.getenv('HOME')
sys.path.append(home+'/src/lib/python/')
from devices import devices

#scale in theta is -9.424 arcsec per degree
#scale in phi   is 9.183 arcsec per degree

# SPECIFIC PARAMETERS FOR THIS DEVICE

devname = "reach_oap"

conexids = ["usb-Newport_CONEX-AGP_A64MV6OB-if00-port0", "usb-Newport_CONEX-AGP_A6WMSQ3G-if00-port0"]
conexnames = ["theta", "phi"]

description = "REACH OAP orientation"

defpos = ["onaxis"]

# GENERIC CODE

args = sys.argv[1:]
devices(devname, conexids, conexnames, args=args, defpos=defpos, description=description, color_st=True)
