import os
import sys
import time

home = os.getenv('HOME')
sys.path.append(home+'/src/lib/python/')
from devices import devices
import numpy as np

# SPECIFIC PARAMETERS FOR THIS DEVICE

devname = "photonics_pickoff"

conexids = ["usb-Newport_CONEX-AGP_A64ONQMP-if00-port0"]
conexnames = ["wheel"]

description = "Photonics modules pickoff mirror"

defpos = ["open", "bs", "kreach"]

# GENERIC CODE

args = sys.argv[1:]
devices(devname, conexids, conexnames, args=args, description=description, defpos=defpos, color_st=True)
