#!/usr/bin/env python

import  sys
import os

home = os.getenv('HOME')
sys.path.append(home+'/src/lib/python/')
from scexao_shm import shm


args = sys.argv[1:]

if args != []:
    camid = int(args[0])
else:
    print "No camera ID!!"
    sys.exit()

# ------------------------------------------------------------------
#                access to shared memory structures
# ------------------------------------------------------------------
shm_im = shm("/tmp/ircam%d.im.shm" % (camid,), verbose=False)


etime = int(shm_im.get_expt())
print etime
