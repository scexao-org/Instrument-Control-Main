import os
import sys
import time

home = os.getenv('HOME')
sys.path.append(home+'/src/lib/python/')
from nps import NPS

# SPECIFIC PARAMETERS FOR THIS DEVICE

npsname = "vsynchro_power"
npsid = 1
portid = 7

description = "power switch for the VAMPIRES synchronization and FLC"

# GENERIC CODE

args = sys.argv[1:]
NPS(npsname, npsid, portid, args=args, description=description)

